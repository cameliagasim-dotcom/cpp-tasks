#include <iostream>
using namespace std;
int main() {
   int n;
    cout << "Eded daxil edin: ";
    cin >> n;
    if (n == 0) {
        cout << 0;
        return 0;
    }
    int x = n;
    int pow = 1;
    while (pow <= x)
        pow *= 2;
    pow /= 2;
    while (pow > 0) {
        if (x >= pow) {
            cout << 1;
            x -= pow;
        } else {
            cout << 0;
        }
        pow /= 2;
    }

    return 0;
}
